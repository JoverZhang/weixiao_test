/* pages/helloworld.wxss */

swiper{
  height: 100vh;
  width: 100vw;
}

.home .header{
  height: 80rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #ebebeb;
}
.home .header .option{
  width: 450rpx;
  margin: 0 auto;
  display: block;
}

.home .header .option view{
  padding: 0 30rpx;
  display: inline-block;
  width: 90rpx;
  /* color: #bfbfbf; */
  color: #ebebeb;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 75rpx;
  text-align: center;
}

.home .header .option .inthis{
  border-bottom: 6rpx solid #529eea;
  color: #529eea;
}

.home .tcontent .option .inthis{
  color: #616571;
}


/* 作业receive */
.home .work_tipwindow{
  height: calc(100vh - 156rpx);
  width: 100%;
  background-color: #ebebeb;
}

.home .work .wre_tipwindow .item {
  top: 5vw;
  position: relative;
  margin: 0 3vw;
  margin-bottom: 5vw;
  padding-bottom: 3vw;
  /* background-color: red; */
  width: 94vw;
  height: auto;
  text-align: center;
}

.home .work .wre_tipwindow .item .time{
  position: relative;
  margin: 0 auto;
  padding: 1vw 2vw;
  border-radius: 4px;
  font-size: 3.2vw;
  color: white;
  margin: 0vw auto 3vw auto;
  text-align: center;
  line-height: 6vw;
  background-color: rgba(212, 212, 212, 0.7);
  display: inline;
}

.home .work .wre_tipwindow .item .content{
  position: relative;
  top: 3vw;
  padding: 7vw 4vw;
  width: 86vw;
  height: auto;
  font-size: 4.1vw;
  text-align: left;
  border-radius: 5px;
  background-color: white;
}

.home .work .wre_tipwindow .item .content:active{
  background-color: #e5e5e5;
}


.home .work .wre_tipwindow .item .content .teacherName{
  position: relative;
  margin-bottom: 0vw;
  /* top: -1vw; */
  /* left: -1vw; */
}

.home .work .wre_tipwindow .item .content .subjectName{
  position: relative;
  float: left;
  width: 86vw;
  top: -2vw;
  font-weight: bold;
  text-align: center;
  margin-bottom: 3vw;
}

.home .work .wre_tipwindow .item .content text{
  position: relative;
  top: -1vw;
  font-size: 4.09vw;
}

.home .work .wre_tipwindow .item .content .detail{
  position: relative;
  left: -4vw;
  height: 5vw;
  width: 94vw;
  bottom: -5vw;
  border-top: 1px solid #ebebeb;
  display: block;
}

.home .work .wre_tipwindow .item .content .detail text{
  margin: 2vw 6vw;
  float: right;
  font-size: 3.5vw;
  color: #d0d0d0;
}



/* 留言receive */
.home .message_tipwindow{
  height: calc(100vh - 156rpx);
  width: 100%;
}
.home .message_tipwindow .messageItem{
  width: 100vw;
  height: auto;
  border-bottom: 1rpx solid #f5f5f5; 
  /* background-color: red; */
}

.home .message_tipwindow .messageItem .senderName{
  margin: 4vw 3vw;
  width: 94vw;
  font-size: 4vw;
  font-weight: bold;
}

.home .message_tipwindow .messageItem .content{
  margin: 4vw 3vw;
  width: 94vw;
  font-size: 3.9vw;
}

.home .message_tipwindow .messageItem .time{
  position: relative;
  margin: 0vw 3vw;
  bottom: 3vw;
  width: 94vw;
  font-size: 3vw;
  color: gray;
}

.home .message_tipwindow .messageItem i-icon{
  position: relative;
  margin: 0vw 3vw;
  float: right;
  bottom: 3vw;
}

.home .message_tipwindow .messageSubmit{
  position: relative;
  float: left;

  width: 100vw;
  height: 4vw;
  padding: 4vw;
  /* bottom: 300rpx; */
  border-top: 2px solid #ebebeb;
  background-color: #edf1f4;
  /* background-color: red; */
}

.home .message_tipwindow .messageSubmit .comment{
  position: relative;
  float: left;
  top: 0rpx;
  bottom: 4vw;
  height: 6vw;
  width: 72vw;
  font-size: 4vw;
  border-bottom: 1px solid #529eea;
}

.home .message_tipwindow .messageSubmit .submit{
  position: relative;
  float: left;
  top: -2vw;
  background-color: #529eea;
  font-size: 4vw;
  line-height: 8vw;
  margin: 0vw 1vw;
  height: 8vw;
  border: none;
  width: 18vw;
}

