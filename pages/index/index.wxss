/* 底部 */

.footer .f_plane{
  position: relative;
  top: -25rpx;
  z-index: 1;
  /* margin-bottom: 20rpx; */
  border-radius: 60rpx;
  width: 130rpx;
  height: 145rpx;
}

.footer .f_plane .f_plane_icon{
  border-radius: 60rpx;
  top: 20rpx;
  width: 130rpx;
  height: 130rpx;
}

