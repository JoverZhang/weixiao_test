  z-index: -1;
  width: 100vw;
  height: calc(100vh - 106rpx);
}
.myInfo .info{
  height: 22vw;
  width: 100vw;
  background-color: #fff;
  display: block;
  /* border-bottom: 2rpx solid #F6F6F6; */
}

.myInfo .info:active{
  background-color: #f9f9f9;
}

.myInfo .info .head{
